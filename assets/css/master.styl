@import '_settings'
@import 'jeet'

normalize-css()
base()

// school colors
alabama = #b50043

html, body
  height: 100%
body
  width: 100%

h1,h2,h3,h4
  +tablet()
    fs: 1.4em
  +mobile()
    fs: 1.6em

.nav-drawer
  transition: margin-left 0.5s ease
  background-color: black
  width: 240px
  height: 100%
  float: left
  padding-top: 40px
  margin-right: 20px
  overflow: hidden

  +below(4)
    transition: margin-left 0.5s ease
    margin-left: -240px

  ul
    list-style-type: none
    list-style-position: outside
    padding-left: 1.2em

    li a
      text-decoration: none
      link: silver 'darken'
      fs: 1.3em
      font-weight: 500
      line-height: 2em

.title-bar
  background-color: navy
  margin: 0
  color: white
  line-height: 2em

  h3
    margin: 0

.heading
  .school-name
    fs: 2em
    line-height: 1.4em

    +tablet()
      fs: 2.2em
    +mobile()
      fs: 2.4em

  .tab-btn
    background-color: inherit
    border: none
    fs: 1.2em
    padding: .5em .8em .5em .8em

    +tablet()
      fs: 1.2em
    +mobile()
      fs: 1.4em

section.main
  transition: all 0.5s ease
  padding: 3em
  margin-left: 240px
  background-color: gray
  overflow: auto
  max-height: 100vh

  +below(4)
    transition: all 0.5s ease
    margin-left: 0px

.school-card
  margin: 0 auto 3em auto
  max-width: 900px
  background-color: white
  box-shadow: 0 2px 2px 0 rgba(0,0,0,.14),0 3px 1px -2px rgba(0,0,0,.2),0 1px 5px 0 rgba(0,0,0,.12)

.school-card-header
  padding: 2em
  background-color: navy
  color: white

.alabama-color
  background-color: alabama 
  
  .revisionInfo
    fs: .8em
    float: right

  .venueName
    fs: 1.2em

.school-card-table
  padding: 2em
  cf()

  ul
    list-style-type: none
    list-style-position: outside
    padding-left: 0
    margin-top: 0

  .table-content
    padding: .6em
    box-sizing: border-box

    +tablet()
      fs: 1.2em
    +mobile()
      fs: 1.2em
      padding: .3em

  li:nth-child(odd)
    .table-content
      background-color: whitesmoke

  .table-header
    bold()
    padding: 1.2em 0 0 .6em
    span(1/1)

  .table-title
    span(1/3)

    +mobile()
      span(1/1)

  .table-title.blank
    height: 2.4em

  .table-data
    span(2/3)

    +mobile()
      span(1/1)
      padding-left: 4em
